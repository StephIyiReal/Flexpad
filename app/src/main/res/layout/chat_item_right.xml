<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/orange_duolingable"
            android:maxWidth="265dp"
            android:paddingTop="4dp"
            android:paddingBottom="10dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:text="@string/hello"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/show_message"
            android:background="@drawable/ic_play_rr" />

        <ImageButton
            android:id="@+id/btn_stop"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_play"
            android:background="@drawable/ic_stop_rr"
            android:paddingStart="0dp"
            android:paddingEnd="2dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_message"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/sending_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/txt_seen"
            android:layout_below="@id/show_message" />

    </RelativeLayout>

</RelativeLayout>